{
  "openapi": "3.0.1",
  "info": {
    "title": "Omniverse USD MCP Server API",
    "description": "API for creating and manipulating USD scenes through a Model Context Protocol (MCP) server",
    "version": "1.0.0",
    "contact": {
      "name": "Project Maintainers"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local development server"
    }
  ],
  "tags": [
    {
      "name": "Stage Operations",
      "description": "Operations for creating, opening, and managing USD stages"
    },
    {
      "name": "Prim Operations",
      "description": "Operations for working with USD primitives"
    },
    {
      "name": "Material Operations",
      "description": "Operations for creating and binding materials"
    },
    {
      "name": "Visualization",
      "description": "Operations for visualizing USD scenes"
    },
    {
      "name": "Physics",
      "description": "Operations for physics simulations"
    },
    {
      "name": "Animation",
      "description": "Operations for creating animations"
    }
  ],
  "paths": {
    "/open_stage": {
      "post": {
        "tags": ["Stage Operations"],
        "summary": "Open or create a USD stage",
        "description": "Open an existing USD stage or create a new one if it doesn't exist",
        "operationId": "openStage",
        "requestBody": {
          "description": "Stage parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["file_path"],
                "properties": {
                  "file_path": {
                    "type": "string",
                    "description": "Path to the USD file"
                  },
                  "createNew": {
                    "type": "boolean",
                    "description": "Whether to create a new stage if it doesn't exist",
                    "default": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Stage opened or created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "stage_id": {
                          "type": "string",
                          "description": "Unique identifier for the opened stage"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/close_stage": {
      "post": {
        "tags": ["Stage Operations"],
        "summary": "Close a USD stage",
        "description": "Close an open USD stage to free resources",
        "operationId": "closeStage",
        "requestBody": {
          "description": "Stage to close",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage to close"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Stage closed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/save_stage": {
      "post": {
        "tags": ["Stage Operations"],
        "summary": "Save a USD stage",
        "description": "Save a USD stage to disk",
        "operationId": "saveStage",
        "requestBody": {
          "description": "Stage to save",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage to save"
                  },
                  "file_path": {
                    "type": "string",
                    "description": "Optional alternative path to save to"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Stage saved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "file_path": {
                          "type": "string",
                          "description": "Path where the stage was saved"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/list_prims": {
      "post": {
        "tags": ["Prim Operations"],
        "summary": "List primitives in a stage",
        "description": "List all primitives in a stage under a given root path",
        "operationId": "listPrims",
        "requestBody": {
          "description": "List prims parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage"
                  },
                  "root_path": {
                    "type": "string",
                    "description": "Root path to list prims under",
                    "default": "/"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "List of primitives",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "prims": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "List of prim paths"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/define_prim": {
      "post": {
        "tags": ["Prim Operations"],
        "summary": "Define a new prim",
        "description": "Define a new prim of the specified type at the given path",
        "operationId": "definePrim",
        "requestBody": {
          "description": "Prim parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id", "path", "type"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage"
                  },
                  "path": {
                    "type": "string",
                    "description": "Path where the prim should be created"
                  },
                  "type": {
                    "type": "string",
                    "description": "Type of the prim (e.g., Xform, Mesh, Material)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Prim defined successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "prim_path": {
                          "type": "string",
                          "description": "Path of the defined prim"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/create_primitive": {
      "post": {
        "tags": ["Prim Operations"],
        "summary": "Create a geometric primitive",
        "description": "Create a geometric primitive (sphere, cube, etc.)",
        "operationId": "createPrimitive",
        "requestBody": {
          "description": "Primitive parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id", "primitive_type", "prim_path"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage"
                  },
                  "primitive_type": {
                    "type": "string",
                    "description": "Type of primitive",
                    "enum": ["sphere", "cube", "cylinder", "cone"]
                  },
                  "prim_path": {
                    "type": "string",
                    "description": "Path where the primitive should be created"
                  },
                  "size": {
                    "type": "number",
                    "description": "Size of the primitive",
                    "default": 1.0
                  },
                  "position": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "description": "Position [x, y, z]",
                    "default": [0, 0, 0]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Primitive created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "prim_path": {
                          "type": "string",
                          "description": "Path of the created primitive"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/create_material": {
      "post": {
        "tags": ["Material Operations"],
        "summary": "Create a PBR material",
        "description": "Create a physically-based rendering material",
        "operationId": "createMaterial",
        "requestBody": {
          "description": "Material parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id", "material_path"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage"
                  },
                  "material_path": {
                    "type": "string",
                    "description": "Path where the material should be created"
                  },
                  "diffuse_color": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "description": "RGB color as [r, g, b] with values from 0-1",
                    "default": [0.8, 0.8, 0.8]
                  },
                  "metallic": {
                    "type": "number",
                    "description": "Metallic value (0-1)",
                    "default": 0.0
                  },
                  "roughness": {
                    "type": "number",
                    "description": "Roughness value (0-1)",
                    "default": 0.5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Material created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "material_path": {
                          "type": "string",
                          "description": "Path of the created material"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/bind_material": {
      "post": {
        "tags": ["Material Operations"],
        "summary": "Bind a material to a prim",
        "description": "Bind a material to a prim for rendering",
        "operationId": "bindMaterial",
        "requestBody": {
          "description": "Binding parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id", "material_path", "prim_path"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage"
                  },
                  "material_path": {
                    "type": "string",
                    "description": "Path to the material"
                  },
                  "prim_path": {
                    "type": "string",
                    "description": "Path to the prim that should receive the material"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Material bound successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage, material, or prim not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/visualize_scene_graph": {
      "post": {
        "tags": ["Visualization"],
        "summary": "Visualize the scene graph",
        "description": "Generate a visualization of the USD scene graph hierarchy",
        "operationId": "visualizeSceneGraph",
        "requestBody": {
          "description": "Visualization parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage"
                  },
                  "format": {
                    "type": "string",
                    "description": "Output format",
                    "enum": ["text", "html", "json", "network"],
                    "default": "text"
                  },
                  "output_path": {
                    "type": "string",
                    "description": "Path to save the output (required for non-text formats)"
                  },
                  "max_depth": {
                    "type": "integer",
                    "description": "Maximum depth to display"
                  },
                  "filter_types": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of prim types to include"
                  },
                  "theme": {
                    "type": "string",
                    "description": "Visual theme",
                    "enum": ["light", "dark", "contrast"],
                    "default": "light"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Visualization generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "visualization": {
                          "type": "string",
                          "description": "Text visualization content (for text format)"
                        },
                        "output_path": {
                          "type": "string",
                          "description": "Path where the visualization was saved (for non-text formats)"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/set_transform": {
      "post": {
        "tags": ["Prim Operations"],
        "summary": "Set the transform of a prim",
        "description": "Set the position, rotation, and scale of a prim",
        "operationId": "setTransform",
        "requestBody": {
          "description": "Transform parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["stage_id", "prim_path"],
                "properties": {
                  "stage_id": {
                    "type": "string",
                    "description": "ID of the stage"
                  },
                  "prim_path": {
                    "type": "string",
                    "description": "Path to the prim"
                  },
                  "position": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "description": "Position as [x, y, z]"
                  },
                  "rotation": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "description": "Rotation as euler angles [x, y, z] in degrees"
                  },
                  "scale": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "description": "Scale as [x, y, z]"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transform set successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "description": "Whether the operation was successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "Stage or prim not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ResponseWrapper": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "description": "Whether the operation was successful"
          },
          "message": {
            "type": "string",
            "description": "Status message"
          },
          "data": {
            "type": "object",
            "description": "Operation-specific data"
          }
        }
      }
    }
  }
} 